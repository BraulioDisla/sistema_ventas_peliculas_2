@model sistema_ventas_peliculas_2.Models.Usuarios

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Asegúrate de tener este layout.
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4" style="width: 400px;">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <form action="@Url.Action("Login", "Usuario")" method="post" id="loginForm">
            <div class="form-group mb-3">
                <label for="User">Nombre de Usuario</label>
                <input type="text" name="User" class="form-control" placeholder="Ingresa tu usuario" required />
            </div>

            <div class="form-group mb-3">
                <label for="Pass">Contraseña</label>
                <input type="password" name="Pass" class="form-control" placeholder="Ingresa tu contraseña" required />
            </div>

            <div class="form-group mb-4">
                <label for="Rol">Rol</label>
                <select name="Rol" class="form-control" required>
                    <option value="" disabled selected>Selecciona un rol</option>
                    @foreach (SelectListItem role in (IEnumerable<SelectListItem>)ViewBag.Roles)
                    {
                        <option value="@role.Value">@role.Text</option>
                    }
                </select>
            </div>

            <div class="form-group text-center mb-3">
                <button type="submit" class="btn btn-primary w-100">Entrar</button>
            </div>

            <div class="form-group text-center">
                <p>¿No tienes una cuenta?</p>
            </div>
        </form>
        <a href="@Url.Action("Registro", "Usuario")" class="btn btn-secondary w-100">Registrarse</a>
    </div>
</div>






