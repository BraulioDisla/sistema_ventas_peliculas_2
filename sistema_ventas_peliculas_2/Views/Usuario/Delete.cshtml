@model sistema_ventas_peliculas_2.Models.Usuarios

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Usuario</h2>

<p>¿Estás seguro de que deseas eliminar al usuario "@Model.NombreUsuario"?</p>

@using (Html.BeginForm("Delete", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdUsuarios)

    <button type="submit" class="btn btn-danger">Eliminar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
